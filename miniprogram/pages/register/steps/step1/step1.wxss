@import "./../../../../style/mi.flex.wxss";
.groups .item{
  height: 244rpx;
  width: 220rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.groups .item text{
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  z-index: 3;
}
.groups .item+.item{
  margin-left: 30rpx;
}
.groups .item::after{
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border-radius: 10rpx;
  background-color: rgba(0,0,0,.2);
  z-index: 1;
}

.title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  padding: 30rpx 0;
}

.cates .item{
  height: 100rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.info{
  font-size: 22rpx;
  color: #999;
  padding: 20rpx 0;
}
.cates .item .hd{
  font-weight: bold;
  flex: none;
  min-width: 80rpx;
}
.cates .item .bd .label{
  font-size: 24rpx;
  color: #999;
  padding-left: 50rpx;
}
.cates .item .bd .unit{
  font-size: 20rpx;
  color: #BA0C2F;
}
.cates .item .bd .price{
  color: #BA0C2F;
  font-size: 30rpx;
  font-weight: bold;
}
.box{
  border-radius: 10rpx;
  background-color: #fff;
  padding: 30rpx;
}
.transparent{
  color: transparent;
  height: 100rpx;
}
.box .title{
  padding: 0 0 36rpx 0;
}
.desc text{
  padding-bottom: 27rpx;
  font-size: 24rpx;
  color: #999;
}
.empty .desc text{
  padding-bottom: 20rpx;
  display: block;
}