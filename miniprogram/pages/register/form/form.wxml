<view class="box">
  <view class="list">
    <van-cell-group title="基本信息">
      <van-field value="{{ value }}" label="姓名" placeholder="请输入用户名" border="{{ false }}" bind:change="onChange" />
      <van-cell title="证件号码" is-link border="{{ false }}" value="身份证" />
      <van-field value="{{ username }}" label="证件号码" placeholder="请输入证件号" border="{{ false }}" />
      <van-field value="{{ 18521562202 }}" label="手机号" placeholder="请输入手机号" error-message="手机号格式错误" border="{{ false }}" />
      <van-field value="{{ phone }}" label="邮箱" placeholder="请输入邮箱" error-message="邮箱格式错误" border="{{ false }}" />
    </van-cell-group>
    <van-cell-group title="其他信息">
      <van-cell title="血型" border="{{ false }}" is-link value="未选择" />
      <van-cell title="衣服尺码" border="{{ false }}" is-link value="未选择" />
      <van-field value="{{ username }}" label="家庭住址" placeholder="请输入证件号" border="{{ false }}" />
    </van-cell-group>
    <van-cell-group title="紧急联系人信息">
      <van-field value="{{ value }}" label="姓名" placeholder="请输入用户名" border="{{ false }}" bind:change="onChange" />
      <van-field value="{{ username }}" label="手机号" placeholder="请输入用户名" border="{{ false }}" />
      <van-field value="{{ username }}" label="家庭住址" placeholder="请输入证件号" border="{{ false }}" />
    </van-cell-group>
    <van-cell-group title="完赛资质">
      <van-cell title="完赛资质" label="请提供一年内全马成绩">
        <view slot="">
          <van-uploader file-list="{{ fileList }}" bind:after-read="afterRead" />
        </view>
      </van-cell>
    </van-cell-group>
    <van-cell><button type="primary" class="button" formType="submit">保存</button></van-cell>
  </view>
  <view class="footer">
  </view>
</view>