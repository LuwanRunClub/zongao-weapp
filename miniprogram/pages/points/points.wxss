.top{    
  height: 390rpx;
  background: linear-gradient(3deg, #393B47, #262834);
  color: #fff;
  font-size: 28rpx;
  padding: 30rpx 50rpx;
}
.top text.point{
  color: #FDE6A2;
  font-size: 38rpx;
  margin-top: 10rpx;
}
.top navigator{
  border: solid 2rpx #4f4d4d;
  color: #E3E1E1;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
}
.top image.avatar{
  width: 86rpx;
  height: 84rpx;
  border: solid 2rpx #fff;
  border-radius: 50%;
  margin-right: 25rpx;
}
.zone{
  padding: 30rpx 70rpx 45rpx 70rpx;
  background-color: #444755;
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.zone image{
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
}
.bottom{
  padding: 30rpx;
}
.cate{
  padding-bottom: 20rpx;
}
.cate text{
  font-weight: bold;
  letter-spacing: 4rpx;
}