.main{
  height: 100vh;
  background-color: #fff;
}
.item{
  padding: 10rpx;
}
.item swiper{
  height: 680rpx;
  border-radius: 20rpx;
  overflow: hidden;
  width: calc(100% - 20rpx);
  margin: 0 auto;
}
.item swiper image{
  height: 680rpx;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}
.user{
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}
.user image{
  margin-right: 10rpx;
}
.summary{
  padding: 10rpx 20rpx;
  line-height: 1.8;
  color: #666;
  font-size: 28rpx;
}
.action .item{
  display: inline-flex;
}
.action .item text{
  padding-left: 10rpx;
}
.comments .title{
  font-weight: bold;
  padding: 20rpx;
  font-size: 26rpx;
}
.comment{
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}
.comment navigator{
  margin-right: 20rpx;
}
.comment .content{
  padding: 10rpx 0;
  line-height: 1.8;
  border-bottom: 2rpx solid #f1f1f1;
}
.comment:last-child .content{
  border-bottom: none;
}
.van-icon__image{
  margin-top: -15rpx;
}

.bottom{
  background-color: #fff;
  padding: 15rpx 30rpx;
  border-top: solid 2rpx #eee;
  position: fixed;
  left: 0;
  width: 100%;
  bottom: env(safe-area-inset-bottom);
  bottom: constant(safe-area-inset-bottom);
}
.bottom input{
  background-color: #f1f1f1;
  padding: 15rpx;
  border-radius: 10rpx;
}
.bottom button{
  font-size: 24rpx;
  padding-left: 20rpx;
  padding-right: 0;
  color: #666;
  width: auto!important;
  display: inline-block;
  margin: 0!important;
  letter-spacing: 4rpx;
  background-color: #fff;
}
.bottom button::after{
  display: none!important;
  content: none;
}