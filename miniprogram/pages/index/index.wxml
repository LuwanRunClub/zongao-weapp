<view class="container">
  <view class="header" style="height:{{headerBarHeight}}px;">
    <image mode="heightFix" src="./../../images/tabs/logo-dark.png"></image>
  </view>
  <view class="swiper" style="margin-top:{{headerBarHeight}}px;">
    <swiper class="{{banners.length === 1 ? 'disabled' : ''}}" bindchange="swiperChange" indicator-dots="{{false}}"
      autoplay="{{true}}">
      <block wx:for="{{banners}}" wx:key="_id">
        <swiper-item>
          <view class="swiper-item">
            <image class="cover" src="{{item.picUrl}}" mode="aspectFill"></image>
            <button bindtap="tap" data-src="{{item.picUrl}}" data-url="{{item.redirectUrl}}" data-type="{{item.type}}"
              class="button">{{_t['查看详情']}}</button>
          </view>
        </swiper-item>
      </block>
    </swiper>
    <view class="dots" wx:if="{{banners.length>1}}">
      <block wx:for="{{banners}}" wx:key="index">
        <view class="dot{{index == current ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>
  <view class="city flex column align-center">
    <image mode="widthFix" src="https://7874-xterra-c2969f-1258173660.tcb.qcloud.la/cloudbase-cms/upload/2021-07-12/h1zmp98w7vi6u0jdo5z1rdd1es615w6u_.png"></image>
    <text class="en">{{currentCity.cityEn}}</text>
    <text class="cn">{{currentCity.cityCN}}</text>
    <view class="desc flex column align-center">
      <text selectable="{{true}}">{{currentCity.desc}}</text>
      <text selectable="{{true}}">{{_t['拥有打卡点']}} {{places.length}}</text>
    </view>
    <button bindtap="redirect" data-url="/pages/venue/city/city" class="button">{{_t['切换城市']}}</button>
  </view>
  <venue-list list="{{places}}" />
  <view class="news">
      <view class="title">{{_t['新闻动态']}}</view>
      <view bindtap="redirect" data-wechaturl="{{news[0].wechatUrl}}"
        data-url="/pages/news/detail/detail?id={{news[0]._id}}" class="cover item">
        <image src="{{news[0].coverUrl}}" mode="aspectFill" />
        <view class="desc overflow-2">{{news[0].title}}</view>
      </view>
      <view class="list">
        <view bindtap="redirect" data-wechaturl="{{item.wechatUrl}}"
          data-url="/pages/news/detail/detail?id={{item._id}}" class="item" wx:for="{{news}}" wx:if="{{index>0}}"
          wx:key="_id">
          <image src="{{item.coverUrl}}" mode="aspectFill"></image>
          <view class="desc overflow-2">{{item.title}}</view>
        </view>
      </view>
  </view>
</view>