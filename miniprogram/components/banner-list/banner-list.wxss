.swiper {
  position: relative;
}
.swiper-item {
  height: 100%;
}
.swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.dots {
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 20rpx;
}

.dot {
  width: 26rpx;
  height: 5rpx;
  background-color: #fff;
}
.dot.active{
  background-color: #C3002F;
}

.dot+.dot {
  margin-left: 20rpx;
}