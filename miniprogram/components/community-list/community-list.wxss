@import "./../../style/mi.flex.wxss";
.item{
  border-radius: 10rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  break-inside: avoid;
}
.item image.thumb {
  height: 210rpx!important;
  width: 100%;
}
.margin-left{
  margin-left: 10rpx;
}
.item__content{
  display: flex;
  flex-direction: column;
}
.item__content .content{
  padding: 20rpx;
}
.masonry {
  padding: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 10px;
}
.content .desc{  
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;  
  word-break: break-all;
}
.user{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}
.user .left, .user .right{
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
image.avatar{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.user text{
  margin-left: 10rpx;
}
.left{
  white-space: nowrap;
}
.comments{
  overflow-y: auto;
  flex: auto;
  padding: 0 20rpx;
}
.comment{
  display: flex;
  padding: 20rpx 0;
}
.comment .icon{
  flex: none;
}
.comment .text{
  flex: auto;
}
.header{
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-weight: bold;
  height: 90rpx;
  border-bottom: solid 2rpx #eee;
  letter-spacing: 4rpx;
}
.text{
  margin-left: 20rpx;
  color: #333;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}
.text .date{
  font-size: 22rpx;
  color: #999;
  padding: 10rpx 0;
}
.text .content{
  font-size: 26rpx;
}
.footer{
  flex: none;
  border-top: solid 2rpx #eee;
  display: flex;
  align-items: center;
}
.footer .user, .footer button{
  flex: none;
}
.footer input{
  flex: auto;
}
.footer button{
  color: #333;
}
.modal{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.user .date{
  font-size: 24rpx;
  color: #ccc;
  margin-left: 0;
}