<view class="login" wx:if="{{!isLogined}}">
  <image class="userinfo-avatar" src="./../../images/avatar@2x.png"></image>
  <button class="button weui-btn btnLogin weui-btn_primary" bindgetuserinfo="onGotUserInfo" open-type="getUserInfo">点击登录</button>
</view>
<view class="login" wx:else>
  <view class="userinfo-avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='mytop-username'>
    <open-data type="userNickName"></open-data>
  </view>
</view>
