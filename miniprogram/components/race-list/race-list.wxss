@import "./../../style/mi.flex.wxss";
@import "./../../style/app.common.wxss";
.cover {
  width: 225rpx;
  padding-right: 20rpx;
}
.item{
  border-bottom: solid 1rpx #f1f1f1;
  padding: 24rpx 0;
}
.cover__img {
  display: flex;
  align-items: center;
}
.item:first-child{
  padding-top: 0;
}
.item:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.title{
  font-size: 28rpx;
  font-weight: bold;
}
.cover image{
  width: 100%;
  height: 160rpx;
  border-radius: 15rpx;
}
.hd{
  padding-bottom: 20rpx;
}
.text{
  overflow: hidden;
  text-overflow: ellipsis;
  height: 160rpx;
  justify-content: space-between;
}
.info text, .info .text{
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
}
.info .red{
  color: #f00;
  font-weight: bold;
  padding: 0 4rpx;
}
.empty{
  height: 100%;
}
.empty image{
  width: 228rpx;
  height: 168rpx;
}
.empty text{
  font-size: 26rpx;
  color: #999;
  padding-top: 30rpx;
}