@import "./../../style/mi.flex.wxss";
@import "./../../style/app.common.wxss";
.cover {
  width: 225rpx;
  padding-right: 30rpx;
}
.item{
  border-bottom: solid 1rpx #f1f1f1;
  padding: 24rpx 0;
}
.item:first-child{
  padding-top: 0;
}
.item:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.title{
  font-size: 28rpx;
  font-weight: bold;
}
.cover image{
  width: 100%;
  height: 160rpx;
  border-radius: 15rpx;
}
.hd{
  padding-bottom: 20rpx;
}
.text{
  overflow: hidden;
  text-emphasis: none;
  height: 160rpx;
  justify-content: space-between;
}
.info text{
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
}