.list{
  padding: 0 24rpx;
}
.item{
  border-radius: 10rpx;
  overflow: hidden;
}
.item+.item{
  margin-top: 24rpx;
}
.cover{
  position: relative;
  height: 300rpx;
  background-color: #ccc;
}
.cover .status{
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #333;
  padding: 8rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
}
.cover image{
  width: 100%;
  height: 300rpx!important;
}
.info{
  border: solid 1rpx #ddd;
  border-radius: 0 0 10rpx 10rpx;
  border-top: none;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.title{
  font-size: 34rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.date{
  padding-top: 10rpx;
  font-size: 30rpx;
  color: #888;
}
.empty{
  height: 90vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}