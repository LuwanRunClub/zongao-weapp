<block wx:if="{{list.length}}">
  <view class="item race-cate-item flex align-center" wx:for="{{list}}" wx:key="_id">
    <view class="flex-auto flex column">
      <view class="top flex space-between">
        <text class="title flex-auto">{{item.title}}</text>
        <view class="flex-none">
          <text class="price" wx:if="{{item.regPrice !== 0}}"> {{item.priceLabel}}</text>
          <block wx:if="{{!item.expired}}">
            <text class="price" wx:if="{{item.regPrice === 0}}">免费</text>
            <text class="price" wx:else>￥{{item.regPrice}}元</text>
          </block>
        </view>
      </view>
      <text class="desc">{{item.desc}}</text>
    </view>
    <view class="flex-none btn" wx:if="{{!item.expired}}">
      <button data-url="/pages/register/register?id={{raceId}}&cateId={{item._id}}" bindtap="redirect" class="button">一键报名</button>
    </view>
  </view>
</block>
<block wx:else>
  <view class="empty">
    <text>暂无组别</text>
  </view>
</block>